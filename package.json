{
    "name": "github-actions-trial",
    "homepage": "https://bhumika-soomani-tocca.github.io/github-actions-trial",
    "version": "0.1.0",
    "private": true,
    "repository": {
        "type": "git",
        "url": "https://github.com/bhumika-soomani-tocca/github-actions-trial.git"
    },
    "dependencies": {
        "@testing-library/jest-dom": "^5.11.4",
        "@testing-library/react": "^11.1.0",
        "@testing-library/user-event": "^12.1.10",
        "husky": "^4.3.7",
        "lint-staged": "^10.5.3",
        "prettier": "^2.2.1",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "react-scripts": "4.0.1",
        "typescript": "3.8.3",
        "web-vitals": "^0.2.4"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "lint": "eslint --ext .tsx,.ts,.js src/",
        "lint:fix": "eslint --fix --ext .tsx,.ts,.js src/"
    },
    "eslintConfig": {
        "parser": "@typescript-eslint/parser",
        "plugins": [
            "prettier",
            "@typescript-eslint"
        ],
        "extends": [
            "standard",
            "standard-react",
            "plugin:prettier/recommended",
            "prettier/standard",
            "prettier/react",
            "plugin:react/recommended",
            "eslint:recommended",
            "plugin:@typescript-eslint/recommended",
            "prettier/@typescript-eslint",
            "plugin:react-hooks/recommended"
        ],
        "env": {
            "node": true,
            "browser": true,
            "jest": true
        },
        "parserOptions": {
            "ecmaVersion": 2020,
            "sourceType": "module",
            "ecmaFeatures": {
                "legacyDecorators": true,
                "jsx": true
            },
            "project": "./tsconfig.json"
        },
        "settings": {
            "react": {
                "version": "detect"
            },
            "import/resolver": {
                "node": {
                    "paths": [
                        "src"
                    ],
                    "extensions": [
                        ".js",
                        ".jsx",
                        ".ts",
                        ".tsx"
                    ]
                }
            }
        },
        "rules": {
            "space-before-function-paren": 0,
            "react/prop-types": 0,
            "react/jsx-handler-names": 0,
            "react/jsx-fragments": 0,
            "react/no-unused-prop-types": 0,
            "import/export": 0,
            "no-unused-vars": "off",
            "@typescript-eslint/no-unused-vars": [
                "error"
            ],
            "@typescript-eslint/explicit-function-return-type": "off",
            "@typescript-eslint/no-explicit-any": "off",
            "@typescript-eslint/interface-name-prefix": "off",
            "@typescript-eslint/no-use-before-define": "off",
            "prettier/prettier": [
                "error",
                {
                    "endOfLine": "auto"
                }
            ],
            "@typescript-eslint/camelcase": "off"
        },
        "globals": {
            "fetch": false
        }
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^2.26.0",
        "@typescript-eslint/parser": "^2.26.0",
        "babel-eslint": "^10.0.3",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.7.0",
        "eslint-config-standard": "^14.1.0",
        "eslint-config-standard-react": "^9.2.0",
        "eslint-import-resolver-alias": "^1.1.2",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-node": "^11.0.0",
        "eslint-plugin-prettier": "^3.1.1",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-react": "^7.17.0",
        "eslint-plugin-react-hooks": "^4.1.2",
        "eslint-plugin-standard": "^4.0.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "src/**/*.js": [
            "eslint --fix --ext .tsx,.ts,.js src/",
            "eslint --ext .tsx,.ts,.js src/",
            "prettier --write",
            "git add"
        ]
    }
}
